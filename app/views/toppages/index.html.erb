<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <%= form_for(@post) do |f| %>

<!--        contributorカラムにログインしているユーザのnameを入れておく-->
        <%= f.hidden_field :contributor, :value => current_user.name %>
        <div class="form-group">
          投稿内容:<%= f.text_area :content, class: 'form-control', rows: 5 %>
        </div>
        <div class="form-group">
          必要金額:<%= f.text_area :amount, class: 'form-control', rows: 1 %>
        </div>
        <%= f.submit '投稿する', class: 'btn btn-primary btn-block' %>
      <% end %>
    </aside>
    <div class="col-xs-8">
      <%= render 'posts/posts', posts: @posts %>
    </div>
  </div>
<% else %>

    <div class="text-center">
      <h1>ここはトップページです</h1>
      <p>デザインは要相談</p>
      <%= link_to '新規登録', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
<% end %>
